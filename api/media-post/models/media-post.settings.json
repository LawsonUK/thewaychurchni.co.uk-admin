{
  "kind": "collectionType",
  "collectionName": "media_posts",
  "info": {
    "name": "media post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "publishedOn": {
      "type": "datetime",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": true
    },
    "featuredImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "videoLink": {
      "type": "string"
    },
    "audioFile": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files"
      ],
      "plugin": "upload",
      "required": false
    },
    "description": {
      "type": "richtext"
    },
    "teacher": {
      "model": "teacher",
      "via": "media_posts"
    },
    "slug": {
      "type": "string",
      "required": false,
      "unique": true
    },
    "media_type": {
      "model": "media-type",
      "via": "media_posts"
    },
    "published": {
      "type": "boolean",
      "default": true
    },
    "featured": {
      "type": "boolean"
    },
    "videoOrientation": {
      "type": "enumeration",
      "enum": [
        "Landscape",
        "Portrait"
      ],
      "required": true
    }
  }
}
